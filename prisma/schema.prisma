// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  posts    Balance[]
  Item     Item[]
}

model Balance {
  id        Int  @id @default(autoincrement())
  amount    Int
  author    User @relation(fields: [balanceId], references: [id])
  balanceId Int
}

model Item {
  id             Int       @id @default(autoincrement())
  itemName       String?
  status         String    @default("draft")
  current_price  Int       @default(0)
  bid_price      Int       @default(0)
  start_duration DateTime? @default(now())
  end_duration   DateTime? @default(now())
  published      Boolean   @default(false)
  author         User      @relation(fields: [itemId], references: [id])
  itemId         Int
}
